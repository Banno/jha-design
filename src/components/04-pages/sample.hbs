<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="cleartype" content="on">
  <title>Card dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="JHA Design">
  <meta name="application-name" content="JHA Design">
  <meta name="theme-color" content="#4caf50">
  <link rel="stylesheet" href="{{path '/styles/jha.css'}}">
  <style>
    :root {
      --primaryAppColor: {{theme.color}};
    }
  </style>
</head>

<body>
  {{render '@header'}}
  <div class="viewport">
    <header class="page-header u-visible@mobile">
      <div class="container">
        <button type="button" class="btn btn--link btn--icon u-visible@mobile">
          <svg class="icon" role="image" title="Apps">
            <use xlink:href="#apps"></use>
          </svg>
        </button>
        <h1 class="page-header_title u-visible@mobile">Dashboard</h1>
      </div>
    </header>
    <div class="container">
      <div class="grid">
        <div class="grid_6@md">
          {{#>@card rightNow}}
            {{#*inline 'container'}}
              <div class="grid">
                <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                  <div class="stat stat--center">
                    <svg class="icon u-fill-neutral" role="presentation">
                      <use xlink:href="#person"></use>
                    </svg>
                    <div class="sub-title">Logged in users</div>
                    <span class="stat_value">5</span>
                  </div>
                </div>
                <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                  <div class="stat stat--center">
                    <svg class="icon u-fill-neutral" role="presentation">
                      <use xlink:href="#person-add"></use>
                    </svg>
                    <div class="sub-title">Sign ups today</div>
                    <span class="stat_value">0</span>
                  </div>
                </div>
                <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                  <div class="stat stat--center">
                    <svg class="icon u-fill-neutral" role="presentation">
                      <use xlink:href="#today"></use>
                    </svg>
                    <div class="sub-title">User logins today</div>
                    <span class="stat_value">322</span>
                  </div>
                </div>
                <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                  <div class="stat stat--center">
                    <svg class="icon u-fill-neutral" role="presentation">
                      <use xlink:href="#schedule"></use>
                    </svg>
                    <div class="sub-title">Average session</div>
                    <span class="stat_value">2m</span>
                  </div>
                </div>
              </div>
              {{/inline}}
              {{/@card}}
              {{#>@card userLookup}}
                {{#*inline 'container'}}
                  <form class="search">
                    <label class="search_bar">
                      <span class="search_icon">
                        <svg class="icon" role="presentation">
                          <use xlink:href="#search"></use>
                        </svg>
                      </span>
                      <input type="search" class="form-control search_input" placeholder="Search" />
                    </label>
                  </form>
                  {{/inline}}
                  {{/@card}}
                  {{render '@card' moneyMovement}}
                  {{render '@card' messages}}
        </div>
        <div class="grid_6@md">
          {{#>@card usage}}
            {{#*inline 'container'}}
              <div class="grid">
                <div class="grid_6@sm grid_4@lg">
                  <div class="h6 text--sm text--light">Active Users</div>
                  <div class="stat">
                    <span class="stat_value">638</span>
                    <span class="stat_comparison">
                      671
                      <svg class="icon icon--sm u-fill-success" role="presentation">
                        <use xlink:href="#arrow-drop-up"></use>
                      </svg>
                    </span>
                  </div>
                </div>
                <div class="grid_6@sm grid_4@lg">
                  <div class="h6 text--sm text--light">Retention</div>
                  <div class="stat">
                    <span class="stat_value">93.3%</span>
                    <span class="stat_comparison">
                      93.1%
                      <svg class="icon icon--sm u-fill-success" role="presentation">
                        <use xlink:href="#arrow-drop-up"></use>
                      </svg>
                    </span>
                  </div>
                </div>
                <div class="grid_6@sm grid_4@lg">
                  <div class="h6 text--sm text--light">Sign Ups</div>
                  <div class="stat">
                    <span class="stat_value">24</span>
                    <span class="stat_comparison">
                      27
                      <svg class="icon icon--sm u-fill-danger" role="presentation">
                        <use xlink:href="#arrow-drop-down"></use>
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
              <hr />
              <div class="h6 text--sm text--light">Usage by platform</div>
              <div class="list list--borderless">
                <div class="list_item list_item--inset">
                  <div class="list_item_action">
                    <svg class="icon u-fill-neutral" role="image" title="Android">
                      <use xlink:href="#android"></use>
                    </svg>
                  </div>
                  <div class="list_item_content">
                    <progress class="progress-linear" value="65" max="100"></progress>
                    <span class="progress-helper">64%</span>
                  </div>
                </div>
                <div class="list_item list_item--inset">
                  <div class="list_item_action">
                    <svg class="icon u-fill-neutral" role="image" title="iOS">
                      <use xlink:href="#apple"></use>
                    </svg>
                  </div>
                  <div class="list_item_content">
                    <progress class="progress-linear" value="33" max="100"></progress>
                    <span class="progress-helper">33%</span>
                  </div>
                </div>
                <div class="list_item list_item--inset">
                  <div class="list_item_action">
                    <svg class="icon u-fill-neutral" role="image" title="Windows">
                      <use xlink:href="#windows"></use>
                    </svg>
                  </div>
                  <div class="list_item_content">
                    <progress class="progress-linear" value="2" max="100"></progress>
                    <span class="progress-helper">2%</span>
                  </div>
                </div>
              </div>
              {{/inline}}
              {{/@card}}
              {{#>@card rdcRequests}}
                {{#*inline 'container'}}
                  {{#>@list list}}
                    {{#*inline 'item-slot'}}
                      <div class="list_item_action">
                        {{render '@avatar--sm' avatar merge=true}}
                      </div>
                      <div class="list_item_content">
                        <div class="sub-title u-float-right">{{time}}</div>
                        <div class="title">{{title}}</div>
                        <div class="sub-title">{{subTitle}}</div>
                      </div>
                      {{/inline}}
                      {{/@list}}
                      {{/inline}}
                      {{/@card}}
                      {{render '@card' lockedOutUsers}}
                      {{render '@card' releaseNotes}}
        </div>
      </div>
    </div>
  </div>
  <div class="dialog_backdrop" style="display: none;"></div>
  <script src="/lib/jha-design/dist/js/standalone.js" async defer></script>
  <!--TODO: What does this do? -->
  {{render '@icons'}}
</body>

</html>