{{#>@base}}
  {{#*inline 'body'}}
    {{render '@header'}}
    <div class="viewport">
      <header class="page-header u-visible@mobile">
        <div class="container">
          {{render '@button' apps}}
          <h1 class="page-header_title u-visible@mobile">Dashboard</h1>
        </div>
      </header>
      <div class="container">
        <div class="grid">
          <div class="grid_6@md">
            {{#>@card rightNow}}
              {{#*inline 'contentSlot'}}
                <div class="grid">
                  <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                    {{render '@stat' loggedInUsers merge=true}}
                  </div>
                  <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                    {{render '@stat' signUps merge=true}}
                  </div>
                  <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                    {{render '@stat' userLogins merge=true}}
                  </div>
                  <div class="grid_6@xs grid_3@sm grid_6@md grid_3@lg">
                    {{render '@stat' averageSession merge=true}}
                  </div>
                </div>
              {{/inline}}
            {{/@card}}
            {{#>@card userLookup}}
              {{#*inline 'contentSlot'}}
                <form class="search">
                  <label class="search_bar">
                    <span class="search_icon">
                      <svg class="icon" role="presentation">
                        <use xlink:href="#search"></use>
                      </svg>
                    </span>
                    <input type="search" class="form-control search_input" placeholder="Search" />
                  </label>
                </form>
              {{/inline}}
            {{/@card}}
            {{#>@card moneyMovement}}
              {{#*inline 'contentSlot'}}
                {{render '@error' error merge=true}}
              {{/inline}}
            {{/@card}}
            {{#>@card messages}}
              {{#*inline 'mediaSlot'}}
                <img src="{{src}}" />
              {{/inline}}
            {{/@card}}
          </div>
          <div class="grid_6@md">
            {{#>@card usage}}
              {{#*inline 'contentSlot'}}
                <div class="grid">
                  <div class="grid_6@sm grid_4@lg">
                    <!--TODO: Reconcile this title with stat subtitle -->
                    <div class="h6 text--sm text--light">Active Users</div>
                    {{render '@stat' activeUsers}}
                  </div>
                  <div class="grid_6@sm grid_4@lg">
                    <div class="h6 text--sm text--light">Retention</div>
                    {{render '@stat' retention}}
                  </div>
                  <div class="grid_6@sm grid_4@lg">
                    <div class="h6 text--sm text--light">Sign Ups</div>
                    {{render '@stat' signUps}}
                  </div>
                </div>
                <hr />
                <div class="h6 text--sm text--light">Usage by platform</div>
                {{#>@list platformUsage}}
                  {{#*inline 'itemSlot'}}
                    <div class="list_item_action">
                      {{render '@icon' icon}}
                    </div>
                    <div class="list_item_content">
                      {{render '@progress' progress}}
                    </div>
                  {{/inline}}

                {{/@list}}
                
                {{/inline}}
                {{/@card}}
                {{#>@card rdcRequests}}
                  {{#*inline 'contentSlot'}}
                    {{#>@list list}}
                      {{#*inline 'itemSlot'}}
                        <div class="list_item_action">
                          {{render '@avatar--sm' avatar merge=true}}
                        </div>
                        <div class="list_item_content">
                          <div class="sub-title u-float-right">{{time}}</div>
                          <div class="title">{{title}}</div>
                          <div class="sub-title">{{subTitle}}</div>
                        </div>
                      {{/inline}}
                    {{/@list}}
                  {{/inline}}
                {{/@card}}
                {{render '@card' lockedOutUsers}}
                {{render '@card' releaseNotes}}
          </div>
        </div>
      </div>
    </div>
    <div class="dialog_backdrop" style="display: none;"></div>
  {{/inline}}
{{/@base}}