<div class="gallery grid grid--no-gutter">
  {{#each item}}
    <div class="{{#each grid}}grid_{{col}}@{{breakpoint}} {{/each}}">
      <div class="gallery_item{{#if isSelected}} is-selected{{/if}}" {{#if ../image}} style="background-image: url({{url}});{{/if}}">
        <div class="gallery_item_details">
          <div class="gallery_item_selected">
            {{render '@icon' icon merge=true}}
          </div>
          <div class="gallery_item_title">{{title}}</div>
          <div class="gallery_item_size">{{size}}</div>
          {{render '@avatar--xs' avatar merge=true}}
        </div>
      </div>
    </div>
  {{/each}}
</div>