<section class="card{{#each modifier}} card--{{.}}{{/each}}">
  {{#if media}}
    <div class="card_media">
      {{#>mediaSlot media}}{{/mediaSlot}}
    </div>
  {{/if}}
  {{#if header}}
    <header class="card_header{{#each header.modifier}} card_header--{{.}}{{/each}}">
      {{#>headerSlot}}
        <div class="card_title">{{header.title}}</div>
        {{#if header.action}}
          {{render '@button' header.action merge=true}}
        {{else}}
          <div class="card_sub-title">{{header.subTitle}}</div>
        {{/if}}
      {{/headerSlot}}
    </header>
  {{/if}}
  <div class="card_content{{#each content.modifier}} card_content--{{.}}{{/each}}">
    {{#if content.loading}}
      <div class="card_content">
        {{render '@progress' progress merge=true}}
      </div>      
    {{else}}
      {{#>contentSlot content}}<div class="card_empty">{{empty.text}}</div>{{/contentSlot}}
    {{/if}}
  </div>
  {{#if footer}}
    <footer class="card_footer">
      {{render '@button' footer.action merge=true}}
    </footer>
  {{/if}}
</section>