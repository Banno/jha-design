<section class="message{{#each modifier}} message--{{.}}{{/each}}{{#if property.isFluidContainer}} fluid-container{{else}} container{{/if}}">
  <div class="message_inner">
    <div class="message_date">
      {{property.date}}
    </div>
    <header class="message_heading">
      {{#if property.heading.avatar}}
        {{render '@avatar' property.heading.avatar merge=true}}
      {{/if}}
      <div class="message_title">{{property.heading.title}}</div>
    </header>
    {{#if property.heading.avatar}}
      <div class="content_push content-push--sm">
    {{/if}}
    <p>{{property.content}}</p>
    {{#if property.heading.avatar}}
  </div>
  {{/if}}
  </div>
</section>